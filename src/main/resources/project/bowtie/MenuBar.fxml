<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<MenuBar fx:id="menu" prefHeight="3000" prefWidth="3000" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.bowtie.App.Controllers.MenuBarController">
    <menus>
        <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem fx:id="saveMenuItem" text="Save" onAction="#handleSaveAction"/>
            </items>
            <items>
                <MenuItem fx:id="openMenuItem" text="Open" onAction="#handleOpenAction"/>
            </items>
            <items>
                <MenuItem fx:id="closeMenuItem" text="Close" onAction="#handleClose"/>
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <items>
                <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="View">

            <items>
                <MenuItem fx:id="screenshotMenuItem" text="Screenshot" onAction="#handleScreenshot" />
            </items>

        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <items>
                <MenuItem mnemonicParsing="false" text="About" />
            </items>
        </Menu>
    </menus>
</MenuBar>

